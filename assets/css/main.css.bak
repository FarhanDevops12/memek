@import url('https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700;800&display=swap');

@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  html {
    -webkit-tap-highlight-color: transparent; /* Hilangkan highlight biru saat tap di Android */
  }
  
  body {
    background-color: #000000;
    color: #e0e0e0;
    font-family: 'JetBrains Mono', monospace; /* Font Coding Modern */
    overflow-x: hidden;
    user-select: none; /* Biar gak bisa di-blok teksnya kayak App Native */
  }

  /* Scrollbar Minimalis */
  ::-webkit-scrollbar { width: 4px; }
  ::-webkit-scrollbar-track { background: #000; }
  ::-webkit-scrollbar-thumb { background: #333; border-radius: 2px; }
}

@layer utilities {
  /* Efek Tombol Native (Active State) */
  .active-press:active {
    transform: scale(0.97);
    opacity: 0.8;
  }

  /* Scanline Ringan */
  .scanlines {
    background: linear-gradient(to bottom, rgba(255,255,255,0), rgba(255,255,255,0) 50%, rgba(0,0,0,0.2) 50%, rgba(0,0,0,0.2));
    background-size: 100% 4px;
    position: fixed;
    pointer-events: none;
    z-index: 50;
  }
}